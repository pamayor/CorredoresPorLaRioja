{# Extendemos la plantilla base #}
{% extends 'AppCorredoresRiojaBundle:Corredores:zonacorredores.html.twig' %}

{# Bloque título #}
{% block title %} Organización {{organizacion.slug}} {% endblock %}

{# El bloque del contenido #}
{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-offset-3 col-xs-6 col-sm-offset-3 col-sm-6 col-md-offset-3 col-md-6 col-lg-offset-3 col-lg-6">
                <h3>{{organizacion.slug}}</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-offset-3 col-xs-6 col-sm-offset-3 col-sm-6 col-md-offset-3 col-md-6 col-lg-offset-3 col-lg-6">
                <p>{{organizacion.nombre}}</p>
                <p><a href="mailto:{{organizacion.email}}">{{ 'contacto' | trans }}</a></p>
                <p>{{ 'organizada_carrera' | trans }}:</p>
                <ul class="list-group">
                    {% for carrera in carreras %}
                        <li class="list-group-item"><a href="{{ path('corredores_detalle_carrera_slug', {'slug':carrera.slug}) }}">{{carrera.slug}}</a></li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock%}